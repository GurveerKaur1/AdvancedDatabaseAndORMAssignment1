@model AdvancedDatabaseAndORMAssignment1.Models.Artist

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Artist</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        @foreach (SongContributor ca in Model.SongContributor.DistinctBy(ca=> ca.Song.Album.Title))
        {
                        <td>
         <h6>  @ca.Song.Album.Title   || <a asp-action="GetAlbums" asp-route-id="@ca.ArtistId">SongsOfTheArtist</a></h6>
                        </td>
        }
           
    </dl>
</div>
