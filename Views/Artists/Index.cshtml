@model IEnumerable<AdvancedDatabaseAndORMAssignment1.Models.Artist>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
                  
            </td>
            <td>
                
                <a asp-action="Details" asp-route-id="@item.Id">Albums</a> 
               
            </td>
        </tr>
}
    </tbody>
</table>
