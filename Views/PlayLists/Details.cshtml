@model AdvancedDatabaseAndORMAssignment1.Models.PlayList

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>PlayList</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        @foreach (PlayListSong c in Model.PlayListSongs)
        {
            <tr>
                <td>
                  <h6>  @c.Song.Title   ||    <a  asp-action="DeleteSongsInPlayList" asp-route-id="@c.PlayListId,@c.SongId">Delete</a></h6>
                </td>
               
            </tr>
            
        }
     <h3>Total runtime of the playlist : @Model.PlayListSongs.Sum(a => a.Song.DurationSeconds) Seconds</h3>
     <h3> Number of Songs in playlist : @Model.PlayListSongs.Count()</h3>
   
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
    <a asp-action="Index" asp-controller="Songs" asp-route-id="@Model.Id">Get All Songs</a>

</div>
