 @model AdvancedDatabaseAndORMAssignment1.Models.Album

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Album</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Album
        </dt>
       

            <dd class="col-sm-10">
               @Html.DisplayFor(model => model.Title)
            </dd>
        <dt>
            Song
        </dt>

        @foreach (Song ca in Model.Songs)
        {

            <dd class="col-sm-10">
               @ca.Title 
            </dd>

        }
       
       
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
